.dialog-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.dialog-info {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 15rpx;
  overflow: hidden;
}

.dialog-title {
  padding: 30rpx 30rpx 10rpx;
}

.dialog-content {
  margin-top: 30rpx;
  padding: 10rpx 30rpx 20rpx;
  min-height: 80rpx;
  font-size: 32rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999;
}

.dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}

.dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  color: #3cc51f;
}

.dialog-title, .dialog-btn {
  font-size: 36rpx;
  font-weight: bold;
}
